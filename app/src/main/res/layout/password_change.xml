<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="452dp"
        android:layout_height="112dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/orange" />

        <ImageView
            android:id="@+id/Password_icon"
            android:layout_width="112dp"
            android:layout_height="153dp"
            android:layout_gravity="start|center_vertical"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/PasswordHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/moresugar"
            android:text="Change Password"
            android:textSize="23dp" />

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="105dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="254dp"
        android:layout_height="345dp"
        android:layout_marginLeft="75dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/PasswordOld"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/onefont"
            android:text="Enter Current Password : "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/PasswordInputCurrent"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/onefont"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="18dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/PasswordNew"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/onefont"
            android:text="Enter New Password : "
            android:textSize="18dp" />

        <EditText
            android:id="@+id/PasswordInputNew"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/onefont"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="18dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/PasswordEnter"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/onefont"
            android:text="Re-enter New Password :"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/PasswordInputEnter"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="1"
            android:fontFamily="@font/onefont"
            android:inputType="textPassword"
            android:textSize="18dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Password_back"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFC16E"
            android:text="Back" />

        <Button
            android:id="@+id/PasswordButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFC16E"
            android:text="Confirm" />

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/PasswordFooter"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            app:srcCompat="@drawable/footer" />

        <ImageButton
            android:id="@+id/Password_homepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baseline_checklist_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="68dp"
            android:text="Tasks"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/moresugar"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/Password_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="280dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baseline_person_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="285dp"
            android:text="Profile"
            android:textColor="#E59356"
            android:fontFamily="@font/moresugar"
            android:textSize="17sp" />
    </FrameLayout>


</LinearLayout>
